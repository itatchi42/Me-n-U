<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMenuItem_3">

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0" >
    </ImageView>

    <TextView
        android:id="@+id/textViewcommentsaddmenuitem3"
        android:layout_width="215dp"
        android:layout_height="33dp"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="85dp"
        android:background="#80000000"
        android:text="Comments (optional)"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editTextentercommentshereaddmenuitem3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButtoncameraaddmenuitem3"
        app:layout_constraintVertical_bias="1.0"
        tools:text="Comments (optional)" />

    <TextView
        android:id="@+id/textViewaddapictureaddmenuitem3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="118dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="118dp"
        android:background="#80000000"
        android:text="Add a picture"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageButtoncameraaddmenuitem3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.836"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Add a picture" />

    <EditText
        android:id="@+id/editTextentercommentshereaddmenuitem3"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="95dp"
        android:ems="10"
        android:hint="Enter comments here..."
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/buttonuploadaddmenuitem3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewcommentsaddmenuitem3" />

    <ImageButton
        android:id="@+id/imageButtoncameraaddmenuitem3"
        android:layout_width="115dp"
        android:layout_height="95dp"
        android:layout_marginStart="135dp"
        android:layout_marginEnd="134dp"
        android:layout_marginBottom="8dp"
        android:src="@android:drawable/ic_menu_camera"
        android:onClick="loadImagefromGallery"
        app:layout_constraintBottom_toTopOf="@+id/textViewcommentsaddmenuitem3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewaddapictureaddmenuitem3" />

    <Button
        android:id="@+id/buttonuploadaddmenuitem3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="10dp"
        android:text="Upload"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextentercommentshereaddmenuitem3"
        tools:text="Upload" />
</android.support.constraint.ConstraintLayout>